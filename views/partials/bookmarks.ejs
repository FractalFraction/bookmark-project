<div>
<% bookmarks.map ((bookmark,index) => { %>
    <p></p>
    <span id='<%= `name${index + 1}` %>'>name: <%= bookmark.name %></span><br>
    <span id='<%= `url${index + 1}` %>'>url: <%= bookmark.url %></span><br>
    <form action='/bookmark/<%=bookmark.id%>?_method=DELETE' method="POST">
        <button id='<%=`delete-button-${index + 1}` %>' type="submit" >Delete</button>
    </form>
    <form action='/edit/gotoupdate<%=bookmark.id%>' method="POST">
        <input id='<%=`update-button-${index +1 }` %>' type='submit' value='Update'>
    </form>
    <form action='/tag<%=bookmark.id%>' method="POST">
        <select name="tag">
            <% tags.map((tag,index) => { %>
                <option value="<%= tag.name %>"><%= tag.name %></option> 
                <% }) %>
        </select>
        <input id='<%=` tag-button-${index + 1} `%>' type="submit" value='Add Tag'>
    </form>
    <form action='/comment<%=bookmark.id%>' method="POST">
        <input id='<%=`comment-box-${index +1 }` %>' type="text" name='text'>
        <input id='<%=` comment-button-${index + 1} `%>' type="submit" value='Add Comment'>
    </form>
        <% const filtComments = comments.filter(comment => (comment.BookmarkId === bookmark.id)) %> 
        <% filtComments.map((comment,commentIndex) => { %>
        <div id='comment-<%=index%>'>
         <p id="bookmark-<%=index %>-comment-<%=commentIndex %>" ><%= comment.text %></p>
        </div>
        <% }) %>
    <% }) %>
</div>